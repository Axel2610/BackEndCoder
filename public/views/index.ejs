<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>
    <title>Productos</title>
</head>
<body>

    <h2 class="text-center mt-3">Productos</h2>


    <form onsubmit=" return addProduct(this)" class="form-control-lg text-center m-5">
        <div class="mb-3">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Nombre" required>
        </div>
        <div class="mb-3">
            <label for="categoria">Categoria</label>
            <input type="text" name="categoria" id="categoria" placeholder="Categoria" required>
        </div>
        <div class="mb-3">
            <label for="descripcion">Descripcion</label>
            <input type="text" name="descripcion" id="descripcion" placeholder="Descripcion" required>
        </div>
        <div class="mb-3">
            <label for="precio">Precio</label>
            <input type="text" name="precio" id="precio" placeholder="Precio" required>
        </div>
        <div class="mb-3">
            <label for="img">Imagen</label>
            <input type="text" name="img" id="imagen" placeholder="URL" required>
        </div>
        <div class="mb-3">
            <input type="submit" value="Agregar Producto" class="btn btn-dark"></input>
        </div>
    </form>

    <div>
        <table class="table table-light table-hover border-dark">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Categoria</th>
                    <th>Descripcion</th>
                    <th>Precio</th>
                    <th>ID</th>
                    <th>Img</th>
                </tr>
            </thead>
            <tbody class="align-middle" id="tabla">
                <tr>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="container">
        <h4 class="m-2 text-center">Chat</h4>
        
        <form class="m-3 form-control" onsubmit=" return addMensaje(this)">
            <div class="m-3">
                <label for="chat">Ingrese su mensaje</label>
                <input type="text" name="chat" id="inputChat" required>
            </div>
            <div class="m-3">
                <label for="email">Ingrese su email</label>
                <input type="email" name="email" id="inputEmail" required>
            </div>
            <div class="m-3">
                <input type="submit" value="Agregar mensaje" class="btn btn-dark">
            </div>
        </form>
       
        <div class="m-3">
            <ul id="listaChat">
            </ul>
        </div>

    </div>

    <script src="./index.js"></script>
</body>
</html>