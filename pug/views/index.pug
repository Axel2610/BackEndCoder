html
    head
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        title='Listado Productos'
    body
        div(class="text-center")
            h2(class="mt-3")= 'Listado de Productos'
            a(href="/api")
                button(class="btn btn-dark m-3")="Ingreso de productos" 
        

        if lista.length
            div
                table(class="table table-light table-hover border-dark")
                    thead
                        tr
                            th="Nombre"
                            th="Categoria"
                            th="Descripcion"
                            th="Precio"
                            th="ID"
                            th="Img"
                    each producto in lista
                        tbody(class="align-middle")
                            td=producto.nombre
                            td=producto.categoria
                            td=producto.descripcion
                            td=producto.precio
                            td=producto.id
                            td
                                img(src=producto.img, alt="", height="50")
        else
            h2(class='text-center')='No hay productos'   