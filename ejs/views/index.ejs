<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Lista de Productos</title>
</head>
<body>
    <div class="text-center">
        <h2 class="mt-3">Listado de Productos</h2>
        <a href="/api"><button class="btn btn-dark m-3">Ingreso de productos</button></a>
    </div>

    <div>

        <% if(listaProd.length){ %>
            <table class="table table-light table-hover border-dark">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Categoria</th>
                        <th>Descripcion</th>
                        <th>Precio</th>
                        <th>ID</th>
                        <th>Img</th>
                    </tr>
                </thead>
                <% listaProd.forEach(prod => { %>
                    <tbody class="align-middle">
                        <td><%= prod.nombre %></td>
                        <td><%= prod.categoria %></td>
                        <td><%= prod.descripcion %></td>
                        <td><%= prod.precio %></td>
                        <td><%= prod.id %></td>
                        <td><img src=<%= prod.img %> alt="" height=50></td>
                    </tbody>
                <%})%>
            </table>
        <% }else{ %>
            <h2 class="text-center mt-5">No hay Productos</h2>
        <% } %>

                </div>
</body>
</html>